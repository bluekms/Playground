@page
@model OperationServer.Pages.Accounts.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Credential.AccountId" class="control-label"></label>
                <input asp-for="Credential.AccountId" class="form-control" />
                <span asp-validation-for="Credential.AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.Password" class="control-label"></label>
                <input asp-for="Credential.Password" class="form-control" />
                <span asp-validation-for="Credential.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

